[core]
  symlinks = false
  autocrlf = false
  eol = lf
  fscache = true
  editor = emacs -Q --eval \\(cua-mode\\)
[color]
  interactive = true
  ui = auto
[help]
  format = html
[diff "astextplain"]
  textconv = astextplain
[rebase]
  autosquash = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[credential]
  helper = helper-selector
[safe]
  directory = *
[protocol "file"]
  allow = always
